<GamePad@GridLayout>:
    id: game_pad
    size_hint: (1, 0.3)
    rows: 1
    cols: 3
    padding: 0
    spacing: 0

    GridLayout:
        id: direction_pad
        rows: 3
        cols: 3
        padding: 0
        spacing: 0

        Button:
            id: direction_pad_up_left
            text: 'UL'
            on_press: 
                app.io_manager_impl.pressed_up_left()

        Button:
            id: direction_pad_up
            text: 'UP'
            on_press: 
                app.io_manager_impl.pressed_up()

        Button:
            id: direction_pad_up_right
            text: 'UR'
            on_press: 
                app.io_manager_impl.pressed_up_right()

        Button:
            id: direction_pad_left
            text: 'ML'
            on_press: 
                app.io_manager_impl.pressed_left()

        Button:
            id: direction_pad_center
            text: 'CT'
            on_press: 
                app.io_manager_impl.pressed_center()

        Button:
            id: direction_pad_right
            text: 'MR'
            on_press: 
                app.io_manager_impl.pressed_right()

        Button:
            id: direction_pad_down_left
            text: 'DL'
            on_press: 
                app.io_manager_impl.pressed_down_left()

        Button:
            id: direction_pad_down
            text: 'DN'
            on_press: 
                app.io_manager_impl.pressed_down()

        Button:
            id: direction_pad_down_right
            text: 'DR'
            on_press: 
                app.io_manager_impl.pressed_down_right()
        
    GridLayout:
        id: control_pad
        rows: 2
        cols: 2
        padding: 0
        spacing: 0

        Button:
            id: control_pad_bumper_left
            text: 'LB'
            on_press: 
                app.io_manager_impl.pressed_bumper_left()
        
        Button:
            id: control_pad_bumper_right
            text: 'RB'
            on_press: 
                app.io_manager_impl.pressed_bumper_right()

        Button:
            id: control_pad_trigger_left
            text: 'LT'
            on_press: 
                app.io_manager_impl.pressed_trigger_left()

        Button:
            id: control_pad_trigger_right
            text: 'RT'
            on_press: 
                app.io_manager_impl.pressed_trigger_right()
        
    GridLayout:
        id: action_pad
        rows: 3
        cols: 3
        padding: 0
        spacing: 0

        Label:
            text: ''
        
        Button:
            id: action_pad_action_one
            text: 'B'
            on_press: 
                app.io_manager_impl.pressed_action_one()

        Label:
            text: ''
        
        Button:
            id: action_pad_action_two
            text: 'A'
            on_press: 
                app.io_manager_impl.pressed_action_two()
        
        Label:
            text: ''

        Button:
            id: action_pad_action_three
            text: 'Y'
            on_press: 
                app.io_manager_impl.pressed_action_three()

        Label:
            text: ''
        
        Button:
            id: action_pad_action_four
            text: 'X'
            on_press: 
                app.io_manager_impl.pressed_action_four()

        Label:
            text: '' 